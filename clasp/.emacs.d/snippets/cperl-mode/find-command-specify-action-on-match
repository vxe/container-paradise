# -*- mode: snippet; require-final-newline: nil -*-
# name: find-command-specify-action-on-match
# key: find
# binding: direct-keybinding
# --
use File::Find;

my \$dir = "${1:directory to run find command}";
find(\&filter, $dir);

sub filter {
    if (/${2:match file on this regex}/){
        print "\$File::Find::name\n";
	}
}