# -*- mode: snippet; require-final-newline: nil -*-
# name: generic-helm-search
# key: generic
# binding: direct-keybinding
# --
(defun vxe/generic-${1:what are you searching through}-search ()
  (interactive)
  (cond ((eq system-type 'windows-nt)
	 (find-file (completing-read "topic:"
				     (split-string (vxeshell-chomp (concat "${2:language interpreter on path} " emacs-root "Dropbox/.emacs.d/windows/${3:script-name}"))"\n")
				     )))
	(t (find-file (completing-read "topic:"
				     (split-string
				      (vxeshell-chomp
				       "${4:some-find-command}")
				      "\n"))))))
