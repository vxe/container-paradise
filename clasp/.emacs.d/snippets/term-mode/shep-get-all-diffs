# -*- mode: snippet -*-
# name: shep-get-all-diffs
# key: shep-get-all-diffs
# --
find . -maxdepth 1 -type d  | grep '/[a-z][a-z][a-z]$' | sed 's/^$//g' |
    while read site
    do
	cd $site;
	find . -name '*.man'  |
	    while read manifest
	    do
		shep -y diff $(basename $manifest);
	    done;
	cd ..;
    done | tee ~/shep-diffs.$(date +$F)