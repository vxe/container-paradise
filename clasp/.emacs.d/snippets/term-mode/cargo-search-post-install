# -*- mode: snippet -*-
# name: cargo-search-post-install
# key: cargo-search-post-install
# --
function cargo-search-post-install(){


if [[ $# -eq 0 ]] ; then
echo 'usage: cargo-search-post-install EDGE'
return 0
else
local EDGE=\$1


sudo /opt/ops/bin/runner.py -f /var/run/lock/rsync_shared-data_mirror_termcount -- /usr/bin/rsync -a --size-only --exclude=**/.git* --delete-after sync0001.$EDGE.parsec.apple.com::shared-data/mirror/termcount/ /opt/shared-data/mirror/termcount/ 2>&1
sudo /opt/ops/bin/runner.py -f /var/run/lock/rsync_shared-data_mirror_influence -- /usr/bin/rsync -a --size-only --exclude=**/.git* --delete-after sync0001.$EDGE.parsec.apple.com::shared-data/mirror/influence/ /opt/shared-data/mirror/influence/ 2>&1
sudo /opt/ops/bin/runner.py -f /var/run/lock/rsync_shared-data_mirror_perspective -- /usr/bin/rsync -a --size-only --exclude=**/.git* --delete-after sync0001.$EDGE.parsec.apple.com::shared-data/mirror/perspective/ /opt/shared-data/mirror/perspective/ 2>&1
sudo /opt/ops/bin/runner.py -f /var/run/lock/rsync_shared-data_mirror_phrase_dict -- /usr/bin/rsync -a --size-only --exclude=**/.git* --delete-after sync0001.$EDGE.parsec.apple.com::shared-data/mirror/phrase_dict/ /opt/shared-data/mirror/phrase_dict/ 2>&1

fi
}
cargo-search-post-install